# --- Mappings --- #
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print

# --- Theme --- #
set default-bg "#4f4f4f"
set default-fg "#d5d2be"
set inputbar-bg "#3f3f3f"
set inputbar-fg "#d5d2be"
set statusbar-bg "#2b2b2b"
set statusbar-fg "#d5d2be"

set index-bg "#3f3f3f"
set index-fg "#d5d2be"
set index-active-bg "#4f4f4f"
set index-active-fg "#d5d2be"

set recolor-lightcolor "#3f3f3f"
set recolor-darkcolor "#d5d2be"

set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
